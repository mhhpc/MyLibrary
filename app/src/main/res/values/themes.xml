<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyLibrary" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">true</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Font. -->
        <item name="fontFamily">@font/font</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="TipsLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="TipsCardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:visibility">visible</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TipsImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TipsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/corner_card</item>
    </style>

    <style name="AppbarTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">230dp</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:theme">@style/Theme.MyLibrary</item>
    </style>

    <style name="TextAppearance.MyApp.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MyApp.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CollapsingToolbarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/gradient_list_toolbar</item>
        <item name="expandedTitleTextAppearance">@style/TextAppearance.MyApp.Title.Expanded</item>
        <item name="collapsedTitleTextAppearance">@style/TextAppearance.MyApp.Title.Collapsed</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="collapsedTitleGravity">center</item>
        <item name="collapsedTitleTextColor">@color/white</item>
        <item name="contentScrim">@color/colorPrimary</item>
        <item name="expandedTitleGravity">bottom|center_horizontal</item>
        <item name="expandedTitleTextColor">@color/white</item>
        <item name="layout_scrollFlags">scroll|snap|exitUntilCollapsed</item>
    </style>

    <style name="AppbarLottie">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:layout_gravity">center|top</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="layout_collapseMode">parallax</item>
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_loop">true</item>
    </style>

    <style name="Lottie1">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_loop">true</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="NestedScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/gradient_list</item>
        <item name="layout_behavior">
            com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior
        </item>
    </style>

    <style name="SimpleTextview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/corner_simple_text</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="CategoriesSimpleTextview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/corner_simple_text</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="Customize_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">7dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppbarImageview">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_gravity">center|top</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_collapseMode">parallax</item>
    </style>

    <style name="CategoryImageview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_gravity">center|top</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="layout_collapseMode">parallax</item>
    </style>

</resources>