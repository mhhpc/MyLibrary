<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/story"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    tools:context=".Stories.Sto1_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/view"
                style="@style/RelativeView"
                android:visibility="visible">

                <io.github.florent37.shapeofview.shapes.ArcView
                    android:id="@+id/v1"
                    style="@style/TopView"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/iv1"
                        style="@style/TopImageView" />

                </io.github.florent37.shapeofview.shapes.ArcView>

            </RelativeLayout>

            <ImageView
                android:id="@+id/imv1"
                style="@style/MainImageView"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@id/view"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="10dp"
                android:transitionName="trans1"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv1"
                style="@style/StoTitle"
                android:layout_below="@+id/imv1"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:text="Sample Title"
                android:transitionName="trans2" />

            <com.adivery.sdk.AdiveryNativeAdView
                android:id="@+id/native_ad_view"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv1"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:placement_id="019934ef-1c56-41d4-9d96-329ee3fefd47"
                app:adivery_native_ad_layout="@layout/ad_layout_example" />

            <TextView
                android:id="@+id/t1"
                style="@style/SimpleTextview"
                android:layout_below="@+id/native_ad_view"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="Sample Text" />

            <com.adivery.sdk.AdiveryBannerAdView
                android:id="@+id/banner_ad"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/t1"
                android:layout_marginTop="15dp"
                app:banner_size="banner"
                app:placement_id="c7712952-11f9-4807-9372-6682f6c781d6" />

            <ImageView
                android:id="@+id/im1"
                style="@style/MainImageView"
                android:layout_below="@id/banner_ad"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="7dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/t2"
                style="@style/SimpleTextview"
                android:layout_below="@+id/im1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Sample Text" />

            <ImageView
                android:id="@+id/im2"
                style="@style/MainImageView"
                android:layout_below="@id/t2"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/t3"
                style="@style/SimpleTextview"
                android:layout_below="@+id/im2"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Sample Text" />

            <ImageView
                android:id="@+id/im3"
                style="@style/MainImageView"
                android:layout_below="@id/t3"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/t4"
                style="@style/SimpleTextview"
                android:layout_below="@+id/im3"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Sample Text" />

            <ImageView
                android:id="@+id/im4"
                style="@style/MainImageView"
                android:layout_below="@id/t4"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/t5"
                style="@style/SimpleTextview"
                android:layout_below="@+id/im4"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Sample Text" />
        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>