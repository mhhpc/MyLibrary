<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sto1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    tools:context=".Sto1_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/view"
                style="@style/RelativeView">

                <io.github.florent37.shapeofview.shapes.ArcView
                    android:id="@+id/v1"
                    style="@style/TopView"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/iv1"
                        style="@style/TopImageView" />

                </io.github.florent37.shapeofview.shapes.ArcView>

            </RelativeLayout>

            <ImageView
                android:id="@+id/imv1"
                style="@style/PhoneImageView2"
                android:layout_below="@id/view"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="20dp"
                android:transitionName="trans1" />

            <TextView
                android:id="@+id/tv1"
                style="@style/TipsTextView"
                android:layout_below="@+id/imv1"
                android:layout_marginTop="50dp"
                android:text="@string/stories_tsto1"
                android:transitionName="trans2"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />
        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>