<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categories.Cat_religious">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ctr_bg">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            style="@style/AppbarTitle">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                style="@style/CollapsingToolbarLayout"
                app:title="@string/cat_religious_title">

                <ImageView
                    android:id="@+id/image"
                    style="@style/AppbarImageview" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    style="@style/Toolbar" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scrollview"
            style="@style/NestedScrollView">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/menu1"
                    style="@style/TipsLinearLayout"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mcv3"
                        style="@style/TipsCardView"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/miv3"
                            style="@style/TipsImageView"
                            android:transitionName="trans1" />

                        <TextView
                            android:id="@+id/tv3"
                            style="@style/TipsTextView"
                            android:text="@string/stories_tsto3"
                            android:transitionName="trans2" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mcv9"
                        style="@style/TipsCardView"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/miv9"
                            style="@style/TipsImageView"
                            android:transitionName="trans1" />

                        <TextView
                            android:id="@+id/tv9"
                            style="@style/TipsTextView"
                            android:text="@string/stories_tsto9"
                            android:transitionName="trans2" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu2"
                    style="@style/TipsLinearLayout"
                    android:layout_below="@id/menu1"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="5dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mcv29"
                        style="@style/TipsCardView"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/miv29"
                            style="@style/TipsImageView"
                            android:transitionName="trans1" />

                        <TextView
                            android:id="@+id/tv29"
                            style="@style/TipsTextView"
                            android:text="@string/stories_tsto29"
                            android:transitionName="trans2" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mcv54"
                        style="@style/TipsCardView"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/miv54"
                            style="@style/TipsImageView"
                            android:transitionName="trans1" />

                        <TextView
                            android:id="@+id/tv54"
                            style="@style/TipsTextView"
                            android:text="@string/stories_tsto54"
                            android:transitionName="trans2" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu3"
                    style="@style/TipsLinearLayout"
                    android:layout_below="@id/menu2"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="5dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mcv55"
                        style="@style/TipsCardView"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/miv55"
                            style="@style/TipsImageView"
                            android:transitionName="trans1" />

                        <TextView
                            android:id="@+id/tv55"
                            style="@style/TipsTextView"
                            android:text="@string/stories_tsto55"
                            android:transitionName="trans2" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mcv56"
                        style="@style/TipsCardView"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/miv56"
                            style="@style/TipsImageView"
                            android:transitionName="trans1" />

                        <TextView
                            android:id="@+id/tv56"
                            style="@style/TipsTextView"
                            android:text="@string/stories_tsto56"
                            android:transitionName="trans2" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>