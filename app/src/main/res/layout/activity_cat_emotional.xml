<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categories.Cat_emotional">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ctr_bg">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            style="@style/AppbarTitle">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                style="@style/CollapsingToolbarLayout"
                app:title="@string/cat_emotional_title">

                <ImageView
                    android:id="@+id/image"
                    style="@style/AppbarImageview" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    style="@style/Toolbar" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scrollview"
            style="@style/NestedScrollView">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/menu1"
                    style="@style/TipsLinearLayout"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mcv1"
                        style="@style/TipsCardView"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/miv1"
                            style="@style/TipsImageView"
                            android:transitionName="trans1" />

                        <TextView
                            android:id="@+id/tv1"
                            style="@style/TipsTextView"
                            android:text="@string/stories_tsto1"
                            android:transitionName="trans2" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mcv2"
                        style="@style/TipsCardView"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/miv2"
                            style="@style/TipsImageView"
                            android:transitionName="trans1" />

                        <TextView
                            android:id="@+id/tv2"
                            style="@style/TipsTextView"
                            android:text="@string/stories_tsto2"
                            android:transitionName="trans2" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu2"
                    style="@style/TipsLinearLayout"
                    android:layout_below="@id/menu1"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="5dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mcv3"
                        style="@style/TipsCardView"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/miv3"
                            style="@style/TipsImageView"
                            android:transitionName="trans1" />

                        <TextView
                            android:id="@+id/tv3"
                            style="@style/TipsTextView"
                            android:text="@string/stories_tsto3"
                            android:transitionName="trans2" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mcv4"
                        style="@style/TipsCardView"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/miv4"
                            style="@style/TipsImageView"
                            android:transitionName="trans1" />

                        <TextView
                            android:id="@+id/tv4"
                            style="@style/TipsTextView"
                            android:text="@string/stories_tsto4"
                            android:transitionName="trans2" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu3"
                    style="@style/TipsLinearLayout"
                    android:layout_below="@id/menu2"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="5dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mcv5"
                        style="@style/TipsCardView"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/miv5"
                            style="@style/TipsImageView"
                            android:transitionName="trans1" />

                        <TextView
                            android:id="@+id/tv5"
                            style="@style/TipsTextView"
                            android:text="@string/stories_tsto5"
                            android:transitionName="trans2" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mcv6"
                        style="@style/TipsCardView"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/miv6"
                            style="@style/TipsImageView"
                            android:transitionName="trans1" />

                        <TextView
                            android:id="@+id/tv6"
                            style="@style/TipsTextView"
                            android:text="@string/stories_tsto6"
                            android:transitionName="trans2" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu4"
                    style="@style/TipsLinearLayout"
                    android:layout_below="@id/menu3"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="5dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mcv7"
                        style="@style/TipsCardView"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/miv7"
                            style="@style/TipsImageView"
                            android:transitionName="trans1" />

                        <TextView
                            android:id="@+id/tv7"
                            style="@style/TipsTextView"
                            android:text="@string/stories_tsto7"
                            android:transitionName="trans2" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mcv8"
                        style="@style/TipsCardView"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/miv8"
                            style="@style/TipsImageView"
                            android:transitionName="trans1" />

                        <TextView
                            android:id="@+id/tv8"
                            style="@style/TipsTextView"
                            android:text="@string/stories_tsto8"
                            android:transitionName="trans2" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>